<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".AdminMaintainProductActivity"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="20dp"
            android:id="@+id/product_imagem"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/product_namesm"
            android:hint="Product Name"
            android:background="@drawable/inputs_design"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:textSize="18dp"
            android:layout_below="@+id/product_imagem"
            android:textColor="@color/colorPrimaryDark"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/product_pricesm"
            android:hint="Product Price"
            android:background="@drawable/inputs_design"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:textSize="18dp"
            android:layout_below="@+id/product_namesm"
            android:textColor="@color/colorPrimaryDark"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/product_descm"
            android:hint="Product Description"
            android:background="@drawable/inputs_design"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:textSize="16dp"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/product_pricesm"
            android:textColor="@color/colorPrimaryDark"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/product_butonm"
            android:hint="Apply Changes"
            android:background="@drawable/buttons"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:textSize="16dp"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/product_descm"
            android:textColor="@android:color/white"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>