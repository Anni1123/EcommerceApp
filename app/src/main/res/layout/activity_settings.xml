<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">
<com.google.android.material.appbar.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/app_bar_settings"
    android:background="@color/colorPrimary">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:text="Close"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:id="@+id/close_acnt"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="Update"
        android:id="@+id/update_acnt"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_marginEnd="5dp"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>
</RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
</com.google.android.material.appbar.AppBarLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/setting_profile_image"
        android:src="@drawable/profile"
        android:layout_below="@+id/app_bar_settings"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="Change Profile"
        android:id="@+id/profile_change"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_below="@+id/setting_profile_image"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phone_number"
        android:layout_below="@+id/profile_change"
        android:hint="Phone Number..."
        android:padding="10dp"
        android:layout_margin="15dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nameprofile"
        android:layout_below="@+id/phone_number"
        android:hint="Full Name..."
        android:padding="10dp"
        android:layout_margin="15dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addressprofile"
        android:layout_below="@+id/nameprofile"
        android:hint="Full Address..."
        android:padding="10dp"
        android:layout_margin="15dp"/>

</RelativeLayout>