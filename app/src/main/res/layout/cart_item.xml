<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <RelativeLayout android:layout_height="match_parent" android:layout_width="match_parent" android:background="@color/colorPrimaryDark" android:padding="10dp">

    <TextView android:layout_height="wrap_content" android:layout_width="160dp" android:textStyle="bold" android:layout_marginLeft="2dp" android:textSize="15dp" android:textColor="@android:color/white" android:text="Product Name" android:id="@+id/cart_product_name"/>

    <TextView android:layout_height="wrap_content" android:layout_width="160dp" android:textStyle="bold" android:textSize="15dp" android:textColor="@android:color/white" android:text="Product Quantity" android:id="@+id/cart_product_quantity" android:layout_marginRight="2dp" android:textAlignment="viewEnd" android:layout_alignParentEnd="true"/>

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:textStyle="bold" android:textSize="18dp" android:textColor="@android:color/white" android:text="Product Price" android:id="@+id/cart_product_price" android:layout_marginTop="15dp" android:gravity="center" android:layout_below="@+id/cart_product_quantity"/>

</RelativeLayout>


</RelativeLayout>