<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">
    <RelativeLayout android:layout_height="60dp" android:layout_width="match_parent" android:layout_centerHorizontal="true" android:layout_alignParentTop="true" android:background="@color/colorPrimaryDark" android:id="@+id/r5">

    <com.rey.material.widget.EditText android:layout_height="wrap_content" android:layout_width="290dp" android:background="@android:color/white" android:id="@+id/search_product_name" android:textColorHint="@color/colorPrimaryDark" android:layout_centerVertical="true" android:layout_marginStart="17dp" android:padding="9dp" android:textStyle="bold" android:textSize="18dp" android:hint="Product Name"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:background="@color/colorPrimaryDark" android:id="@+id/search_btn" android:padding="9dp" android:textStyle="bold" android:textSize="16dp" android:layout_toRightOf="@+id/search_product_name" android:layout_centerInParent="true" android:textColor="@android:color/white" android:text="Search"/>

</RelativeLayout>

<androidx.recyclerview.widget.RecyclerView android:layout_height="match_parent" android:layout_width="match_parent" android:id="@+id/search_list" android:layout_below="@+id/r5"></androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>