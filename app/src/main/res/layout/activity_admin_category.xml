<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminCategoryActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/slogan_category"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Add New Product"
        android:textSize="26sp"
        android:textAlignment="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_category_layout"
        android:orientation="horizontal"
        android:layout_below="@+id/slogan_category"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:id="@+id/tshits"
            android:src="@drawable/tshirts"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sports"
            android:src="@drawable/sports"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/womendress"
            android:src="@drawable/female_dresses"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sweater"
            android:src="@drawable/sweather"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_below="@+id/linear_category_layout"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/glasses"
            android:src="@drawable/glasses"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:id="@+id/pursebag"
            android:src="@drawable/purses_bags"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/hats"
            android:src="@drawable/hats"/>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:id="@+id/shoes"
            android:layout_marginStart="16dp"
            android:src="@drawable/shoess"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_below="@+id/linear1_category_layout"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/headphones"
            android:src="@drawable/headphoness"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:id="@+id/laptops"
            android:src="@drawable/laptops"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/watches"
            android:src="@drawable/watches"/>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:id="@+id/mobiles"
            android:layout_marginStart="16dp"
            android:src="@drawable/mobiles"/>

    </LinearLayout>

    <Button
        android:id="@+id/maintain_btn"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_above="@+id/check_order"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="1dp"
        android:background="@color/colorPrimaryDark"
        android:text="Maintain Product"
        android:textAllCaps="false"
        android:textStyle="bold|italic"
        android:textColor="@android:color/white"
        android:textSize="20sp" />
    <Button
        android:id="@+id/check_order"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_above="@+id/logout"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="1dp"
        android:background="@color/colorPrimaryDark"
        android:text="Check New Order"
        android:textAllCaps="false"
        android:textStyle="bold|italic"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold|italic"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/logout"
        android:layout_marginBottom="20dp"
        android:text="Logout"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textAllCaps="false"/>
</RelativeLayout>